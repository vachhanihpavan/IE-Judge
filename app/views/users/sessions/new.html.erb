<% stylesheet_link_tag "blog-post.css" %>
<div class="bg-image bg-parallax overlay"></div>
<div class="wrapper">
  <h2 class="form-signin-heading">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "form-signin"}) do |f| %>
    <div class=form-control">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, id: 'rememberMe' %>
        <%= f.label :remember_me, class: "checkbox" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
